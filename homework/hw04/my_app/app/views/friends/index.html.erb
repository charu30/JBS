<h1>Listing friends</h1>

<table cellspacing = 25 cellpadding = 10>
  <tr>
    <th>Name</th>
    <th>Since</th>
    <th>Comment</th>
    <th>Group</th>
  </tr>

<% @friends.each do |friend| %>
    <tr>
    <td><%=h friend.name %></td>
    <td><%=h friend.since %></td>
    <td><%=h friend.comment %></td>
    <td><%=h friend.group %></td>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<!--Displaying my groups-->
<h2>My Groups</h2>
<table>
<% @groups.each do |group| %>
    <tr>
    <td><%=h group %></td>
    </tr>
<% end %>
</table>

